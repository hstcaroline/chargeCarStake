<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:gravity="center_horizontal" >

     <include
		android:id="@+id/forgetpw_top_layout"
        layout="@layout/titlebar" />

     <RelativeLayout
        android:id="@+id/login_image"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/forgetpw_top_layout"
        android:layout_marginTop="25dp" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/main_logo" />
    </RelativeLayout>

    <EditText
        android:id="@+id/forgetpw_user_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_image"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:paddingTop="10dp"
	    android:paddingBottom="10dp"
        android:background="@drawable/login_editbox"
        android:hint="您的手机号"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/forgetpw_validate_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgetpw_user_edit"
        android:paddingTop="10dp"
	    android:paddingBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_editbox"
        android:hint="请输入验证码"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="15sp" />

    <Button
        android:id="@+id/forgetpw_validatecode_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/forgetpw_user_edit"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_style_green"
        android:text="获取验证码"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgetpw_validatecode_btn"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/forgetpw_next_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_style_green"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>