<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:id="@+id/Userlayout"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_user_layout"
        layout="@layout/titlebar" />

    <LinearLayout
        android:id="@+id/stake_detail_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_user_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/stake_l1"
            android:layout_marginLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/stake_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingTop="20dp"
                android:textSize="20sp"
                android:drawableLeft="@drawable/yellow_stake"
                android:text="充电桩:" />

            <TextView
                android:id="@+id/stake_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textSize="20sp"
                android:layout_weight="1.5"
                android:text="特斯拉1号桩" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stake_l2"
             android:layout_marginLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/stake_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="地址：" />

            <TextView
                android:id="@+id/stake_address_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="上海交通大学闵行校区附近" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stake_l3"
             android:layout_marginLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/stake_type_title"
                 android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="车桩类型:" />

            <TextView
                android:id="@+id/stake_type_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="私有桩" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stake_l4"
             android:layout_marginLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/stake_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_weight="0.5"
                android:text="可用时间段:" />

            <TextView
                android:id="@+id/stake_stime_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="12:00:00" />

            <TextView
                android:id="@+id/stake_time_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.3"
                android:text="—————" />

            <TextView
                android:id="@+id/stake_etime_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="23:00:00" />
        </LinearLayout>
 <LinearLayout
            android:id="@+id/stake_l6"
             android:layout_marginLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/stake_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_weight="0.5"
                android:text="计费单价(/h):" />

            <TextView
                android:id="@+id/stake_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="20.0" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/stake_l5"
             android:layout_marginLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/stake_phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_weight="0.5"
                android:text="联系电话:" />

            <TextView
                android:id="@+id/stake_phone_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="15900658735" />
        </LinearLayout>
     
       
    </LinearLayout>
     <LinearLayout
        android:id="@+id/layout7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/stake_detail_layout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/during_textView1"
            style="@style/item_title_style"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:paddingRight="20dp"
            android:textSize="14sp"
            android:text="充电时长:" />

        <TextView
            android:id="@+id/during_time_txt"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="13dp"
            android:paddingRight="140dp"
            android:layout_weight="0.7"
            android:gravity="center_horizontal"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/start_use_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/layout7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@color/darkgray"
        android:text="开始充电"
        android:textColor="#ffffff" />

</RelativeLayout>