<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
     android:background="#eee"
     android:gravity="center_horizontal"
    >
     <include
		android:id="@+id/regist_top_layout"
        layout="@layout/titlebar" />
 <RelativeLayout 
        android:id="@+id/login_image"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
         android:layout_marginTop="25dp"
        android:layout_below="@+id/regist_top_layout">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
            android:src="@drawable/main_logo"
            android:contentDescription="@string/app_name"
        />
            
        </RelativeLayout>
<EditText 
	    android:id="@+id/regist_user_edit"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/login_image"
	    android:textColor="#000"
	    android:textSize="15sp"
	     android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:layout_marginTop="25dp"
	    android:layout_marginLeft="50dp"
	    android:layout_marginRight="50dp"
	    android:singleLine="true"
	    android:background="@drawable/login_editbox"
	    android:hint="您的手机号"/>

	<EditText
	    android:id="@+id/regist_passwd_edit"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/regist_user_edit"
	    android:layout_marginLeft="50dp"
	    android:layout_marginRight="50dp"
	    android:layout_marginTop="25dp"
	     android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:background="@drawable/login_editbox"
	    android:hint="请输入6-16位密码"
	    android:maxLength="16"
	    android:password="true"
	    android:singleLine="true"
	    android:textColor="#000"
	    android:textSize="15sp" />

	<EditText
	    android:id="@+id/regist_validate_edit"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/regist_passwd_edit"
	    android:layout_marginLeft="50dp"
	    android:layout_marginRight="150dp"
	    android:layout_marginTop="25dp"
	     android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:background="@drawable/login_editbox"
	    android:hint="请输入验证码"
	    android:inputType="text"
	    android:singleLine="true"
	    android:textColor="#000"
	    android:textSize="15sp" />

	 <Button
	         android:id="@+id/regist_validatecode_btn"
	         android:layout_width="100dp"
	         android:layout_height="40dp"
	         android:layout_below="@+id/regist_passwd_edit"
	         android:layout_marginTop="25dp"
	         android:layout_marginLeft="100dp"
	         android:layout_marginRight="45dp"
	         android:background="@drawable/btn_style_green"
	         android:text="获取验证码"
	         android:textColor="#ffffff"
	         android:layout_alignParentRight="true"
	         android:textSize="18sp" />
	 <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/regist_validatecode_btn"
	    >

	     <Button
	         android:id="@+id/register_btns"
	         android:layout_width="150dp"
	         android:layout_height="40dp"
	         android:layout_alignParentTop="true"
	         android:layout_centerHorizontal="true"
	         android:background="@drawable/btn_style_green"
	         android:text="注册"
	         android:textColor="#ffffff"
	         android:textSize="18sp" />

	</RelativeLayout>
</RelativeLayout>
