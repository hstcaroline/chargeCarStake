<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:orientation="vertical"
    android:id="@+id/orderLayout" >

    <include 
	    
	    layout="@layout/titlebar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        style="@style/layout_default_style" >

        <TextView
            android:id="@+id/textView1"
            style="@style/big_title_style"
            android:text="请选择预约时间" />

        <TextView
            android:id="@+id/textView2"
            style="@style/small_title_style"
            android:text="预约时间不超过24小时" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@drawable/item_border"
            >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.4"
                style="@style/item_title_style"
                android:text="时间:" />

            <TextView
                android:id="@+id/timepick_btn"
                style="@style/item_title_style"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.6"
                android:text="请选择时间"
                android:textColor="#B0B0B0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_marginTop="5dp"
            android:background="@drawable/item_border" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.4"
                style="@style/item_title_style"
                android:text="预计使用时间" />

            <TextView
                android:id="@+id/during_btn"
                style="@style/item_title_style"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.6"
                android:text="请选择使用时间"
                android:textColor="#B0B0B0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.4"
            android:background="@drawable/item_border"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:text="充电单价：20元" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:text="定金支付：0.50元" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:text="预约电桩串码：123878979823" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/order_btn"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:gravity="center"
        android:text="立即预约"
        android:textColor="@color/white"
        android:clickable="false" />

</LinearLayout>
